<ap-inventoryproduct form-id="ap-productform-{{ section.id }}-{{ product.id }}" class="ap-productform__inventory-wrapper">
    <span class="inventory inventory--high">
        {% if product.variants[0]["available"] %}
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="11" viewBox="0 0 16 11" fill="none">
                <path d="M0 4.71429L1.6 3.14286L8 9.42857L6.4 11L0 4.71429Z" fill="#15D11C" />
                <path d="M14.4 0L16 1.57143L6.4 11L4.8 9.42857L14.4 0Z" fill="#15D11C" />
            </svg>
            {{ 'products.product.in_stock' | t }}
        {% else %}
            {{ 'products.product.out_stock' | t }}
        {% endif %}
    </span>
    <script type="application/json">
        {
            {%- assign _size = product.variants | size -%}
            {%- for variant in product.variants -%}
                {%- if product.variants[0]["available"] -%}
                    "{{- variant.id -}}": "<span class=\"inventory inventory--high\">In stock</span>"
                {%- else -%}
                    "{{- variant.id -}}": "<span class=\"inventory inventory--high\">Out of stock</span>"
                {%- endif -%}
                {%- if forloop.index < _size and _size > 1 -%},{%- endif -%}
            {%- endfor -%}
        }
    </script>
</ap-inventoryproduct>
