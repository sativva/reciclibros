    },
    {
      "type": "color",   
      "id": "background-color",
      "default": "#ffffff",
      "label": "t:sections.all.background-color.label"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "t:sections.all.background_image.label"
    },
    {
      "label": "Text With Product",
      "id": "text_with_product",
      "type": "checkbox",
      "default": false
    },
    {
      "type": "color",
      "id": "heading_color",
      "default": "#282828",
