{% render 'section-style' %}

<style>
  {% if section.settings.nowrap %}
    #shopify-section-{{ section.id }} .swiper-container {
      clip-path: unset;
    }
  {% endif %}

/* TEXT WITH PRODUCT */
{% if section.settings.text_with_product %}
  #shopify-section-{{ section.id }} .section__header {
    margin-bottom: 6px!important;
  }
{% endif %}
@media (min-width: 1500px) {
  #shopify-section-{{ section.id }} .countdown-header.text-center {
    max-width: 350px;
  }
  .text-w-product {
    display: flex;
    align-items: start;
    gap: 55px;
  }
  .text-w-product .section__header-countdown {
    width: 25%;
  }
  .text-w-product .product-sw-list {
    width: 75%;
  }
}
</style>

<section class="section-{{ section.id }}">
  <div class="{{ section.settings.setwidthout }}">
      <div class="{% if section.settings.text_with_product %}text-w-product{% endif %}">

        <div {% if section.settings.arrow_heading %}style="gap: 15px 0;"{% endif %} class="{% if section.settings.arrow_heading %}d-flex flex-wrap flex-md-row flex-column align-items-center mb-5 {% else %} section__header-countdown{% endif %}">
          
          {% render 'section-heading' %}
  
          {% if section.settings.date_picker != blank and section.settings.time_picker != blank %}
            <div class="header-box-center countdown-header text-{{ section.settings.text_align }} mb-4"> 
              <div class="header-countdown-title">
                {{ section.settings.title_countdown }}
              </div>
              {% render 'collection-countdown' , settings: section.settings %}
            </div>
          {% endif %}

          {% if section.settings.arrow_heading %}
            <div style="gap: 10px;" class="d-flex position-relative justify-content-md-end justify-content-center arrow-heading">
              <button class="swiper-button-prev" data-swiper-id="{{ section.id }}-prev">
                {% render 'icon-arrow-prev' %}
              </button>
              <button class="swiper-button-next" data-swiper-id="{{ section.id }}-next">
                {% render 'icon-arrow-next' %}
              </button>
            </div>
          {% endif %}
        
        </div>
    
        <!-- Swiper -->
        <div data-swiper-id="{{ section.id }}" class="ap-swiper mySwiper swiper-container product-sw-list" data-swiper='{
            "spaceBetween": 15,
            "slidesPerView": 3,
            "breakpoints":{
              "576": {
                "slidesPerView": 3,
                "spaceBetween": 15
              },
              "768":{
                "slidesPerView": 3,
                "spaceBetween": {{ section.settings.spaceBetween }}
              },
              "1200":{
                "slidesPerView": {{ section.settings.perviewDesktop }},
                "spaceBetween": {{ section.settings.spaceBetween }}
              }
            }
          }'>
            <div class="swiper-wrapper">
                <!-- Generating 10 cards with different content -->
                {% liquid
                    if section.settings.collection != blank
                        assign limit = section.settings.limit
                        for product in section.settings.collection.products limit: limit
                            echo '<div class="swiper-slide">'
                                render 'product-grid-2', product: product
                            echo '</div>'
                        endfor
                    else
                        if section.settings.collection == blank
                            for i in (1..6)
                                echo '<div class="swiper-slide">'
                                    capture current
                                    cycle 1, 2, 3, 4, 5, 6
                                    endcapture
                                    assign img = 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg'
                                    echo img
                                echo '</div>'
                            endfor
                        endif
                    endif
                %}
            </div>

            <!-- Pagination and Navigation -->
            {% if section.settings.dots %}
              <div class="swiper-pagination"></div>
            {% endif %}

            {% if section.settings.arrow_heading != true %}
              {% if section.settings.arrows %}
                <button class="swiper-button-prev" data-swiper-id="{{ section.id }}-prev">
                  {% render 'icon-arrow-prev' %}
                </button>
                <button class="swiper-button-next" data-swiper-id="{{ section.id }}-next">
                  {% render 'icon-arrow-next' %}
                </button>
              {% endif %}
            {% endif %}

        </div>

      </div>

      {% for product in section.settings.collection.products %}
        <ap-quickbuy id="product-{{ section.id }}-{{ product.id }}-drawer" href="/products/{{ product.handle }}?view=quick-buy-drawer" class="drawer drawer--large drawer--quick-buy hd-phone"></ap-quickbuy>
      {% endfor %}
  </div>
</section>
  
{% schema %}
{
  "name": "Product list Swiper",
  "class": "index-section",
  "tag": "section",
  "settings": [
    {
      "type": "select",
      "id": "setwidthout",
      "label": "Set Width",
      "default": "full",
      "options": [
        {
          "value": "container",
          "label": "Box"
        },
        {
          "value": "container-fluid",
          "label": "Container Fluid"
        },
        {
          "value": "full",
          "label": "Full"
        }
