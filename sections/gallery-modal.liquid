{{ 'gallery-modal.css' | asset_url | stylesheet_tag }}
{% render 'section-style' %}

<style>
  
/* Gallery Styles */
.gallery-modal {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-gap: {{ section.settings.distance_col }}px;
}

@media (min-width: 768px ) {
  .gallery-modal {
    grid-template-columns: repeat({{ section.settings.column_item }}, 1fr);
  }
  {% if section.settings.image_large %}
  .gallery-modal > *:nth-child(-5n+3) {
    grid-column-end: 2 span;
    grid-row-end: 2 span;
  }
  {% endif %}
}

.gallery-modal img {
  cursor: pointer;
  transition: all .4s;
  border-radius: 20px;
}

.gallery-modal .gallery-item:hover img {
  filter: brightness(0.5);
}

.gallery-item__icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  opacity: 0;
  transition: all .4s;
}

.gallery-item:hover .gallery-item__icon {
  opacity: 1;
}

.gallery-item {
    position: relative;
}

/* Popup Styles */
.gallery-popup {
  display: flex;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
  justify-content: center;
  align-items: center;
  z-index: 1000;
  flex-direction: column;
  transition: all .4s;
  opacity: 0;
  visibility: hidden;
}

.gallery-popup img {
  transition: transform 0.3s ease;
  cursor: zoom-in;
}

.gallery-popup #ap-popup-image {
  max-width: 80%;
  max-height: 80%;
}

/* Buttons and Thumbnail List */
.gallery-popup .gallery-close-btn, .gallery-popup .gallery-next-btn, .gallery-popup .gallery-prev-btn {
  position: absolute;
  background-color: #fff;
  border: none;
  padding: 10px;
  cursor: pointer;
  font-size: 16px;
  min-width: 50px;
  min-height: 50px;
  border-radius: 20px;
  text-align: center;
  z-index: 10;
}

.gallery-popup .gallery-close-btn:hover, .gallery-popup .gallery-next-btn:hover, .gallery-popup .gallery-prev-btn:hover {
  background-color: var(--primary);
  color: #fff;
}

.gallery-popup .gallery-close-btn {
  top: 20px;
  right: 20px;
}

.gallery-popup .gallery-next-btn {
  top: 50%;
  right: 0;
  transform: translateY(-50%);
}

.gallery-popup .gallery-prev-btn {
  top: 50%;
  left: 0;
  transform: translateY(-50%);
}

.gallery-thumbnail-list {
  display: flex;
  justify-content: center;
  gap: 10px;
  margin-top: 10px;
  flex-wrap: wrap;
}

.gallery-thumbnail-list img {
  width: 80px;
  cursor: pointer;
  opacity: 0.6;
  transition: opacity 0.2s;
}

.gallery-thumbnail-list img:hover, .gallery-thumbnail-list img.active {
  opacity: 1;
}

.gallery-popup img {
  position: relative;
  z-index: 9;
}

@media (min-width: 768px) {
  .gallery-popup .gallery-next-btn {
    right: 20px;
  }

  .gallery-popup .gallery-prev-btn {
    left: 20px;
  }
}

</style>

<section class="section-{{ section.id }} section-gallery-modal">
  <div class="{{ section.settings.setwidthout }}">
    {% render 'section-heading' %}
    <div class="row">
      <div class="gallery-modal">
        {% for block in section.blocks %}
          {% if block.settings.featured_image != blank %}
            <div class="gallery-item">
              <img loading="lazy" 
              sizes="(max-width: 740px) 80vw, (max-width: 999px) 60vw, 425px"
              alt="" 
              src="{{ block.settings.featured_image | image_url: width: block.settings.featured_image.width }}" 
              data-large="{{ block.settings.featured_image | image_url: width: 900 }}" 
              data-srcset="{%- if block.settings.featured_image.width >= 3000 -%}{{ block.settings.featured_image | image_url: width: 3000, crop: 'center' }} 3000w,{%- endif -%}
                  {{ block.settings.featured_image | image_url }} {{ block.settings.featured_image.width }}w"
              height="{{ block.settings.featured_image.height }}"
              width="{{ block.settings.featured_image.width }}">

              <span class="gallery-item__icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 40 40" fill="none">
                  <g>
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M20 40L20 0L22 8.74224e-08L22 40H20Z" fill="white"/>
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M1.74846e-07 20L40 20V22L0 22L1.74846e-07 20Z" fill="white"/>
                  </g>
                  <defs>
                    <clipPath id="clip0_833_5593">
                      <rect width="40" height="40" fill="white"/>
                    </clipPath>
                  </defs>
                </svg>
              </span>
            </div>
          {% else %}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}
        {% endfor %}
      </div>
      
      <div class="gallery-popup" id="image-popup">
        <button class="gallery-close-btn">
          <i class="fa fa-xmark"></i>
        </button>
        <button class="gallery-next-btn">
          <i class="fa fa-chevron-right"></i>
        </button>
        <button class="gallery-prev-btn"> 
          <i class="fa fa-chevron-left"></i>
        </button>
        <img src="" alt="Large Image" id="ap-popup-image" height="" width="">
        
        <div class="gallery-thumbnail-list" id="thumbnail-list">
          {% for block in section.blocks %}
            {% if block.settings.featured_image != blank %}
              <div class="gallery-item">
                <img loading="lazy" 
                sizes="(max-width: 740px) 80vw, (max-width: 999px) 60vw, 425px"
                alt="" 
                src="{{ block.settings.featured_image | image_url: width: block.settings.featured_image.width }}" 
                data-large="{{ block.settings.featured_image | image_url: width: 900 }}" 
                data-srcset="{%- if block.settings.featured_image.width >= 3000 -%}{{ block.settings.featured_image | image_url: width: 3000, crop: 'center' }} 3000w,{%- endif -%}
                    {{ block.settings.featured_image | image_url }} {{ block.settings.featured_image.width }}w"
                height="{{ block.settings.featured_image.height }}"
                width="{{ block.settings.featured_image.width }}">
              </div>
            {% else %}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

