{% render 'section-style' %}

{%- if template == 'page.about-us' -%}
<style>
    #shopify-section-{{ section.id }} {
      --heading-color: {{ section.settings.heading_color | color_extract: 'red' }}, {{ section.settings.heading_color | color_extract: 'green' }}, {{ section.settings.heading_color | color_extract: 'blue' }};
      --color-body: {{ section.settings.text_color | color_extract: 'red' }}, {{ section.settings.text_color | color_extract: 'green' }}, {{ section.settings.text_color | color_extract: 'blue' }};
      --background-color-content : {{ section.settings.primary_bg }};
    }
    #shopify-section-{{ section.id }} {
      background-size: cover;
      background-position: {{ section.settings.bg_align }};
      background-repeat: no-repeat;
    }
    #shopify-section-{{ section.id }} .ap-imagetextblock__image-wrapper  {
        background-color: transparent;
    }
    #shopify-section-{{ section.id }} .advanced-content {
      position: relative;
    }
    #shopify-section-{{ section.id }} .adv-list-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    #shopify-section-{{ section.id }} .row {
      gap: 15px 0;
    }

    /* ADV SERVICE */
    .adv-text-service-item {
        display: flex;
        align-items: start;
        gap: 20px;
    }
    .adv-text-service-title.heading.h6 {
      text-transform: none;
    }
    .adv-text-service-item:not(:last-child) {
      margin-bottom: 40px;
    }
    .adv-text-service_list {
      display: flex;
      align-items: center;
      gap: 30px 60px;
      flex-wrap: wrap;
    }

    /* TEXT COLLAPSE */
    .adv-collapsible summary::marker {
      content: '';
    }
    .adv-collapsible summary {
      display: flex;
      align-items: center;
      gap: 20px;
      cursor: pointer;
      flex-direction: row-reverse;
      justify-content: space-between;
    }
    .fa-chevron-right {
      color: var(--primary);   
    }
    details[open] .fa-chevron-right {
      transform: rotate(90deg);
    }
    .adv-collapsible i.fa {
      font-size: 0.825rem;
      transition: all 0.2s;
    }
    .collapsible-title {
      color: var(--color-accent-1);
      font-size: 20px;
      letter-spacing: 0;
      line-height: 26px;
      font-weight: 700;
    }
    .adv-collapsible {
      margin: 0;
      width: 100%;
    }
    details:not(:last-child) {
      margin-bottom: 20px;
    }
    details {
      padding: 17px 30px;
      border: 1px solid rgb(var(--border-color));
      border-radius: 20px;
    }
    details[open] .accordion__title {
      padding: 0 0 10px 0;
    }

    /* IMAGE CHILD */
    .adv-img-child {
        max-width: 160px;     
        max-height: 160px;
        position: absolute;
        top: 54px;
        left: 52%;
        animation: spinnerRotate 6s linear infinite;
    }

    {% for block in section.blocks %} 
                   
      @media (min-width: 1200px) {
        #block-{{ block.id }} .text-list-content {
          {%- if block.settings.padding_desktop_sm != blank -%}
            padding: {{ block.settings.padding_desktop_sm }};
          {%- endif -%}
        }
      }

      @media (min-width: 1600px) {
        #block-{{ block.id }} .text-list-content {
          {%- if block.settings.padding_desktop != blank -%}
            padding: {{ block.settings.padding_desktop }};
          {%- endif -%}
        }
      }

      @media (max-width: 1199px) {
        #block-{{ block.id }} .text-list-content {
          {%- if block.settings.padding_tablet != blank -%}
            padding: {{ block.settings.padding_tablet }};
          {%- endif -%}
        }
      }

    {% endfor %} 
</style>
{%- endif -%}
  
<section class="section advanced-content {{ section.settings.class }}">
  <div class="{{ section.settings.setwidthout }}">
    {% if section.settings.tab_heading != blank %}
    <header class="section__header text-{{ section.settings.text_align }} mb-60">
        {% if section.settings.sub_heading != blank %}
          <p class="heading sub-heading mb-20">{{ section.settings.sub_heading }}</p>
        {% endif %}
        <h3 class="heading h{{ section.settings.tab_heading_size }} mb-20">{{ section.settings.tab_heading }}</h3>
        {% if section.settings.tab_description != blank %}
          <div class="heading-description">
            {{ section.settings.tab_description }}
