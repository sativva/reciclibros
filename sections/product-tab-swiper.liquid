{% render 'section-style' %}

<style>
.section-{{ section.id }} .ap-navtabs__item {
    text-align: left;
}
.section-{{ section.id }} .ap-navtabs__position {
    display: none !important;
}
.product-tab-swiper__nav .ap-navtabs__item {
  padding: 0;
    font-size: calc(var(--base-font-size) + 2px);
    line-height: 26px;
    text-transform: capitalize;
    font-weight: 600;
    border-bottom: 2px solid transparent;
    margin: 0;
}
.product-tab-swiper__nav .ap-navtabs__item svg {
    color: var(--color-accent-3);
    margin-right: 7px;
}
.section-{{ section.id }} .ap-navtabs__item[ap-expanded-aria=true], 
.section-{{ section.id }} .ap-navtabs__item[ap-expanded-aria=true] svg ,
.section-{{ section.id }} .ap-navtabs__item:hover {
    color: rgb(var(--heading-color));
    border-color: var(--primary);
}
.section-{{ section.id }} .ap-navtabs__item-list {
  gap: 15px 35px;
  box-shadow: none;
  flex-wrap: wrap;
}

.section-{{ section.id }} img.banner-list-image {
  border-radius: 10px;
}
.section-{{ section.id }} .banner-text {
  padding: 15px;
}
@media (min-width: 992px) {
  .section-{{ section.id }} .banner-text {
    padding: {{ section.settings.padding_inner }};
  }
}
@media (min-width: 1200px) {
  .product-tab-swiper__image {
    width: 40%;
  }
  .product-tab-swiper__listitem {
      width: 60%;
  }
  {% if section.settings.position_btn_bottom %}
  .section-{{ section.id }} .wrapper-button {
    position: absolute;
    bottom: 30px;
    right: 30px;
  }
  {% endif %}
}

@media (max-width: 767px) {
  .product-tab-swiper__image {
    order: 1;
  }
  .section-{{ section.id }} img.banner-list-image {
    min-height: 300px;
    object-fit: cover;
  }
}
</style>

<section class="section-{{ section.id }} product-tab-swiper">
    <div class="{{ section.settings.setwidthout }}">
        <div style="gap: 15px 0;"class="d-flex flex-wrap flex-md-row flex-column align-items-center mb-5">
                
            {% render 'section-heading' %}

            <div class="product-tab-swiper__nav">
                <ap-navtabs class="ap-navtabs ap-navtabs--center">
                    <ap-scrollablecontent class="ap-navtabs__scroller">
                    <div class="ap-navtabs__scroller-inner">
                        <div class="ap-navtabs__item-list">
                        {% for block in section.blocks %}
                            <button type="button" class="ap-navtabs__item" ap-expanded-aria="{% if forloop.index == 1 %}true{% else %}false{% endif %}" ap-controlsaria="block-{{ block.id }}">{{ block.settings.tab_name }}</button>
                        {% endfor %}
                        </div>
                        <span class="ap-navtabs__position is-initialized"></span>
                    </div>
                    </ap-scrollablecontent>
                </ap-navtabs>
            </div>
        
        </div>

        <div class="row">

            <div class="col-md-6 col-12 product-tab-swiper__image">
              <banner-content reveal-on-scroll="">
                <div class="banner-content has-overlay">
                    <div class="banner-image">
                      {% if section.settings.featured_image != blank %}
                          <img class="banner-list-image" reveal="" loading="lazy" 
                          sizes="(max-width: 740px) 80vw, (max-width: 999px) 60vw, 425px"
                          alt="" 
                          src="{{ section.settings.featured_image | image_url: width: section.settings.featured_image.width }}" 
                          data-srcset="{%- if section.settings.featured_image.width >= 3000 -%}{{ section.settings.featured_image | image_url: width: 3000, crop: 'center' }} 3000w,{%- endif -%} {{ section.settings.featured_image | image_url }} {{ section.settings.featured_image.width }}w"
                          src="{{ section.settings.featured_image | image_url: width: 1500 }}"
                          height="{{ section.settings.featured_image.height }}"
                          width="{{ section.settings.featured_image.width }}">
                      {% else %}
                          <div class="banner-list-image">
                            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                          </div>
                      {% endif %}
                    </div>

                    {%-liquid
                      assign position_text = section.settings.position_text
                      case position_text
                        when 'top-left'
                        assign positiontxt = 'align-items-start justify-content-start'
                        when 'top-center'
                        assign positiontxt = 'align-items-center justify-content-start'
                        when 'top-right'
                        assign positiontxt = 'align-items-end justify-content-start'
                        when 'mid-left'
                        assign positiontxt = 'align-items-start justify-content-center'
                        when 'mid-center'
                        assign positiontxt = 'align-items-center justify-content-center'
                        when 'mid-right'
                        assign positiontxt = 'align-items-end justify-content-center'
                        when 'bot-left'
                        assign positiontxt = 'align-items-start justify-content-end'
                        when 'bot-center'
                        assign positiontxt = 'align-items-center justify-content-end'
                        when 'bot-right'
                        assign positiontxt = 'align-items-end justify-content-end'
                        else 
                        assign positiontxt = 'align-items-end justify-content-start'
                      endcase
                    -%}
                    <div class="banner-text d-flex flex-column {{ positiontxt }}">

                      <div class="text-{{ section.settings.text_align_item }}">

                        {% if section.settings.heading_title != blank %}
                        <h3 style="color: {{ section.settings.color_title }};transition: all .4s;" class="heading sub-heading-2 mb-1" reveal="">
                          {{- section.settings.heading_title -}}
                        </h3>
                        {% endif %}
                        
                        {% if section.settings.heading != blank %}
                        <h2 style="color: {{ section.settings.color_title_center }};transition: all .4s;" class="heading heading-center fw-semibold text-uppercase my-0 {{ section.settings.heading_size_2 }} {% if section.settings.description != blank %} mb-2{% else %} mb-4 pb-3{% endif %}" reveal="">
                            <span>
                                {{- section.settings.heading -}}
                            </span>
                        </h2>
                        {% endif %}   

                        {% if section.settings.description != blank %}
                        <p style="color: {{ section.settings.color_description }};transition: all .4s;" class="description mb-0" reveal="">
                            <span>
                              {{- section.settings.description -}}
                            </span>   
                        </p>
                        {% endif %}
                        
                        <div class="wrapper-button">
                          {% if section.settings.button1_label != blank %}
                          <a href="{{ section.settings.link1 }}" reveal="" class="button {{ section.settings.style_btn_item }}">
                              {{ section.settings.button1_label }}
                          </a>
                          {% endif %}
                        </div>

                      </div>

                    </div>
                </div>
              </banner-content>
            </div>

            <div class="col-md-6 col-12 product-tab-swiper__listitem mb-md-0 mb-4">

                {% for block in section.blocks %}  
                    {% case block.type %}
                    {% when 'product_tab' %}
                        <div stagger-apparition="" id="block-{{ block.id }}" class="product-tab-swiper__item {% if forloop.index == 1 %}ap-object-loaded{% endif %}" {% if forloop.index == 1 %}style="opacity: 1;"{% endif %} {% if forloop.index != 1 %}hidden=""{% endif %}>
                            <!-- Swiper -->
                            <div data-swiper-id="{{ section.id }}" class="ap-swiper mySwiper swiper-container" data-swiper='{
                                "spaceBetween": 15,
                                "slidesPerView": 1,
                                    "breakpoints":{
                                        "576": {
                                            "slidesPerView": 2,
                                            "spaceBetween": 15
                                        },
                                        "768":{
                                            "slidesPerView": 2,
                                            "spaceBetween": {{ section.settings.spaceBetween }}
                                        },
                                        "1200":{
                                            "slidesPerView": 3,
                                            "spaceBetween": {{ section.settings.spaceBetween }}
                                        },
                                        "1500":{
                                            "slidesPerView": {{ section.settings.perviewDesktop }},
                                            "spaceBetween": {{ section.settings.spaceBetween }}
                                        }
                                    }
                                }'>
                                <div class="swiper-wrapper">
                                    <!-- Generating 10 cards with different content -->
                                    {% liquid
                                        if block.settings.collection != blank
                                            assign limit = section.settings.limit
                                            for product in block.settings.collection.products limit: limit
                                                echo '<div class="swiper-slide">'
                                                    render 'product-grid-2', product: product
                                                echo '</div>'
                                            endfor
                                        else
                                            if block.settings.collection == blank
                                                for i in (1..6)
                                                    echo '<div class="swiper-slide">'
                                                        capture current
                                                        cycle 1, 2, 3, 4, 5, 6
                                                        endcapture
                                                        assign img = 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg'
                                                        echo img
                                                    echo '</div>'
                                                endfor
                                            endif
                                        endif
                                    %}
                                </div>
    
                                <!-- Pagination and Navigation -->
                                {% if section.settings.dots %}
                                  <div class="swiper-pagination"></div>
                                {% endif %}
    
                                {% if section.settings.arrows %}
                                  <button class="swiper-button-prev" data-swiper-id="{{ section.id }}-prev">
                                    {% render 'icon-arrow-prev' %}
                                  </button>
                                  <button class="swiper-button-next" data-swiper-id="{{ section.id }}-next">
                                    {% render 'icon-arrow-next' %}
                                  </button>
                                {% endif %}
    
                            </div>
                        </div>     

                        {% for product in block.settings.collection.products %}
                            <ap-quickbuy id="product-{{ section.id }}-{{ product.id }}-drawer" href="/products/{{ product.handle }}?view=quick-buy-drawer" class="drawer drawer--large drawer--quick-buy hd-phone"></ap-quickbuy>
                        {% endfor %}
                        
                    {% endcase %}
                {% endfor %} 

            </div>
        </div>
    </div>
</section>

