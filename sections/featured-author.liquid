{% render 'section-style' %}

{% style %}
.carousel-author__products a {
  max-width: 98px;
}
.carousel-author_item__box {
  border-radius: 10px;
  padding: 50px 30px 30px;
}
{% endstyle %}  

<section class="section-{{ section.id }} carousel-author">
  <div class="{{ section.settings.setwidthout }}">
    {% render 'section-heading' %}

    <div class="carousel-author-list position-relative">

            <div data-swiper-id="{{ section.id }}" class="ap-swiper mySwiper swiper-container" data-swiper='{
                "spaceBetween": 15,
                "slidesPerView": 1,
                "loop": true,
                "breakpoints":{
                    "360": {
                        "slidesPerView": 1,
                        "spaceBetween": 15
                    },
                    "768":{
                        "slidesPerView": 2,
                        "spaceBetween": {{ section.settings.spaceBetween }}
                    },
                    "1200":{
                        "slidesPerView": {{ section.settings.perviewDesktop }},
                        "spaceBetween": {{ section.settings.spaceBetween }}
                    }
                }
            }'>
            <div class="swiper-wrapper">     
                {% for block in section.blocks %}  
                    <div id="block-{{ block.id }}" class="swiper-slide carousel-author__item">
                        <div class="carousel-author_item__box text-center border">
                            <div class="carousel-author__img mb-3">
                                {% if block.settings.author_img != blank %}
                                    <img loading="lazy" 
                                    sizes="(max-width: 740px) 80vw, (max-width: 999px) 60vw, 425px"
                                    alt="" 
                                    src="{{ block.settings.author_img | image_url: width: block.settings.author_img.width }}" 
                                    data-srcset="{%- if block.settings.author_img.width >= 3000 -%}{{ block.settings.author_img | image_url: width: 3000, crop: 'center' }} 3000w,{%- endif -%} {{ block.settings.author_img | image_url }} {{ block.settings.author_img.width }}w"
                                    src="{{ block.settings.author_img | image_url: width: 1500 }}"
                                    height="{{ block.settings.author_img.height }}"
                                    width="{{ block.settings.author_img.width }}">
                                {% else %}
                                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                {% endif %}
                            </div>
                            <div class="carousel-author__title mb-30">
                                {% if block.settings.heading != blank %}
                                <h2 style="color: rgb(var(--heading-color));" class="heading fw-semibold {{ section.settings.heading_size_2 }} my-0">
                                    {{- block.settings.heading -}}
                                </h2>
                                {% endif %}   
                            </div>
                            <div style="gap: 3px;" class="carousel-author__products mb-30 d-flex align-item-center justify-content-center">
                                {%- assign collection = collections[block.settings.mini_collection] -%}
                                {%- if collection != blank -%}
                                    {%- for product in collection.products limit: block.settings.limit_product -%}
                                        <a class="d-block position-relative" href="{{ product.url | within: collection }}">
                                            <img class="lazyload author-img" 
                                            src="{{ product.featured_image | image_url: width: product.featured_media.width }}" 
                                            loading="lazy"
                                            alt=""
                                            width="{{ product.featured_image.width }}"
                                            height="{{ product.featured_image.height }}">       
                                        </a>
                                    {%- endfor -%}
                                {%- else -%}
                                    {%- assign limit =  block.settings.limit_product -%}
                                    {%- for i in (1..limit) -%}
                                    <div class="media p-3 {% unless forloop.last %}border-bottom{% endunless %}">
                                        <div class="mr-3 border">
                                            {%- capture current -%}
                                                {%- cycle 1, 2, 3, 4, 5, 6 -%}
                                            {%- endcapture -%}
                                            <div style="width: 74px;">
                                                {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                                            </div>
                                        </div>
                                    </div>
                                    {%- endfor -%}
                                {%- endif -%}
                            </div>
                            <div class="carousel-author__btn w-100">
                                {% if block.settings.button1_label != blank %}
                                    <a href="{{ block.settings.mini_collection.url }}" class="button {{ section.settings.style_btn_item }} btn-sm w-100">
                                        {{ block.settings.button1_label }}
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
    
            <!-- Pagination and Navigation -->
            {% if section.settings.dots %}
                <div class="swiper-pagination"></div>
            {% endif %}

            {% if section.settings.arrows %}
                <button class="swiper-button-prev" data-swiper-id="{{ section.id }}-prev">
                    {% render 'icon-arrow-prev' %}
                </button>
                <button class="swiper-button-next" data-swiper-id="{{ section.id }}-next">
                    {% render 'icon-arrow-next' %}
                </button>
            {% endif %}
    
            </div>
  
      </div>

  </div>
</section>

{% schema %}
{
  "name": "Featured author",
  "tag": "section",
  "class": "section shopify-section-featured-author",
  "max_blocks": 15,
  "settings": [
    {
      "type": "select",
      "id": "setwidthout",
      "label": "Set Width",
      "default": "full",
      "options": [
        {
          "value": "container",
          "label": "Box"
        },
        {
          "value": "container-fluid",
          "label": "Container Fluid"
        },
        {
          "value": "full",
          "label": "Full"
        }
      ]
    },
    {
      "type": "color",
      "id": "background-color",
      "default": "#ffffff",
      "label": "t:sections.all.background-color.label"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "t:sections.all.background_image.label"
    },
    {
      "type": "color",
      "id": "heading_color",
      "default": "#282828",
      "label": "t:sections.advanced-content.settings.heading_color.label"
    },
    {
      "type": "color",
      "id": "text_color",
      "default": "#282828",
      "label": "t:sections.advanced-content.settings.text_color.label"
    },
    {
      "type": "liquid",
      "id": "sub_heading",
      "default": "Sub heading",
      "label": "Sub Heading"
    },
    {
      "type": "liquid",
      "id": "tab_heading",
      "default": "Welcome to our store",
      "label": "t:sections.advanced-content.settings.tab_heading.label"
    },
    {
      "type": "range",
      "id": "tab_heading_size",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 2,
      "label": "t:sections.advanced-content.settings.tab_heading_size.label"
    },
    {
      "type": "text",
      "id": "tab_description",
      "label": "t:sections.advanced-content.settings.tab_description.label"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Link"
    },
    {
      "type": "select",
      "id": "style_btn",
      "label": "Style Button",
      "default": "btn-base",
      "options": [
        {
          "value": "btn-base",
          "label": "Button Base"
        },
        {
          "value": "btn-outline",
          "label": "Button Out Line"
        },
        {
          "value": "btn-line",
          "label": "Button Line"
        },
        {
          "value": "btn-line-black",
          "label": "Button Line Black"
        }
      ]
    },
    {
      "type": "select",
      "id": "text_align",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left",
      "label": "Text align"
    },
    {
      "type": "header",
      "content": "Settings item"
    },
    {
      "type": "select",
      "id": "heading_size_2",
      "options": [
        {
          "value": "h1",
          "label": "H1"
        },
        {
          "value": "h2",
          "label": "H2"
        },
        {
          "value": "h3",
          "label": "H3"
        },
        {
          "value": "h4",
          "label": "H4"
        },
        {
          "value": "h5",
          "label": "H5"
        },
        {
          "value": "h6",
          "label": "H6"
        },
        {
          "value": "p",
          "label": "P"
        }
      ],
      "default": "h3",
      "label": "Heading size"
    },
    {
      "type": "select",
      "id": "style_btn_item",
      "label": "Style Button",
      "default": "btn-base",
      "options": [
        {
          "value": "btn-base",
          "label": "Button Base"
        },
        {
          "value": "btn-outline",
          "label": "Button Out Line"
        },
        {
          "value": "btn-line",
          "label": "Button Line"
        },
        {
          "value": "btn-line-black",
          "label": "Button Line Black"
        }
      ]
    },
    {
      "type": "range",
      "id": "perviewDesktop",
      "label": "Per View Desktop",
      "max": 6,
      "min": 1,
      "step": 1,
      "unit": " c",
      "default": 4
    },
    {
      "type": "range",
      "id": "spaceBetween",
      "label": "Space Between",
      "max": 40,
      "min": 0,
      "step": 1,
      "unit": " sp",
      "default": 30
    },
    {
      "type": "checkbox",
      "id": "arrows",
      "label": "Arrows",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "dots",
      "label": "Dots",
      "default": true
    },
    {
      "type": "header",
      "content": "Margin & Padding"
    },
    {
      "type": "text",
      "id": "margin_desktop",
      "label": "t:sections.all.margin_desktop.label",
      "info": "t:sections.all.margin_desktop.info"
    },
    {
      "type": "text",
      "id": "margin_mobile",
      "label": "t:sections.all.margin_mobile.label",
      "info": "t:sections.all.margin_mobile.info"
    },
    {
      "type": "text",
      "id": "padding_desktop",
      "label": "t:sections.all.padding_desktop.label",
      "info": "t:sections.all.padding_desktop.info"
    },
    {
      "type": "text",
      "id": "padding_mobile",
      "label": "t:sections.all.padding_mobile.label",
      "info": "t:sections.all.padding_mobile.info"
    }
  ],
  "blocks": [
        {
            "type": "author-item",
            "name": "Author item",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "author_img",
                    "label": "Image"
                },
                {
                    "type": "liquid",
                    "id": "heading",
                    "label": "Title"
                },
                {
                    "type": "collection",
                    "id": "mini_collection",
                    "label": "Collection"
                },
                {
                    "type": "range",
                    "id": "limit_product",
                    "min": 1,
                    "max": 3,
                    "step": 1,
                    "default": 3,
                    "label": "Limit Products"
                },
                {
                    "type": "liquid",
                    "id": "button1_label",
                    "label": "Button"
                }
            ]
        }
    ],
    "presets": [
    {
      "name": "Featured author",
      "blocks": [
        {
          "type": "author-item"
        },
        {
          "type": "author-item"
        },
        {
          "type": "author-item"
        },
        {
          "type": "author-item"
        }
      ]
    }
  ]
}
{% endschema %}
