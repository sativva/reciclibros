{%- style -%}
  
  :root {
    --enable-sticky-header: {% if section.settings.sticky_header %}1{% else %}0{% endif %};
    --enable-transparent-header: {% if section.settings.transparent_header %}1{% else %}0{% endif %};
    --ap-loadingbar-background: {{ section.settings.loading_bar_background | color_extract: 'red' }}, {{ section.settings.loading_bar_background | color_extract: 'green' }}, {{ section.settings.loading_bar_background | color_extract: 'blue' }};
  }

  #shopify-section-{{ section.id }} {
    --header-background: {{ section.settings.header_background }};
    --header-text-color: {{ section.settings.header_text_color | color_extract: 'red' }}, {{ section.settings.header_text_color | color_extract: 'green' }}, {{ section.settings.header_text_color | color_extract: 'blue' }};
    --header-border-color: {{ section.settings.header_border_color }};
    --reduce-header-padding: {{ section.settings.reduce_header_padding }};
    --color-icon: {{ section.settings.color_icon }};
    --color-icon-hover: {{ section.settings.color_icon_hover }};

    position: -webkit-sticky;
    {% if section.settings.sticky_header %}position: sticky;{% endif %}
    top: 0;

    z-index: 999;

    /* Main Menu */
    --m-color-menu: {{ section.settings.color_menu }};
    --m-color-menu-hover: {{ section.settings.color_menu_hover }};  

    /* Search */
    --bg-btn-search: {{ section.settings.bg_btn_search }};
    --color-btn-search: {{ section.settings.color_btn_search }};

    /* Mega menu */
    --title-mega: {{ section.settings.color_menu_child_title }};
    --link-mega: {{ section.settings.color_menu_child }};
    --link-mega-h: {{ section.settings.color_menu_child_hover }};

    /* VERTICAL Menu */
    --bg-btn-vertical: {{ section.settings.bg_btn_vertical }};
    --color-btn-vertical: {{ section.settings.color_btn_vertical }};

    /* Categories Menu */
    --color-categories-nav: {{ section.settings.color_categories_nav }};
  }

  #shopify-section-{{ section.id }} .header {
    background-image: url({{ section.settings.background_image | image_url: width: 2000 }});
    background-size: contain;
    background-position: bottom;
  }

  #shopify-section-{{ section.id }} .header__logo-image {
    max-width: {{ section.settings.logo_width }}px;
  }

  @media screen and (min-width: 741px) {
    #shopify-section-{{ section.id }} .header__logo-image {
      max-width: {{ section.settings.logo_width }}px;
    }
  }
  
  /* HEADER transparent */
  .header[transparent=""]:hover {
    background-color: var(--header-background);
    top: 30px !important;
  }
  .js body:not(.index) #shopify-section-{{ section.id }} .header-transparent {
    background-color: var(--header-background);
  }
  body:not(.index) .header[transparent=""] {
    position: unset;
    background: var(--header-background);
  }
  /* END  */

  {% if section.settings.icon_search == 'icon-text' %}
  .header__search-bar {
    background-color: {{ section.settings.bg_search }};
  }
  .predictive-search__input::placeholder {
    color: {{ section.settings.color_input }}!important;
  }
  {% endif %}

  /* CATEGORY */
  {% if section.settings.enable_categories %}
    @media (min-width: 1200px) {
      body.index .header .menu-categories #categories-menu-drawer {
        top: 100%;
        opacity: 1;
        visibility: visible;
        transform: translateY(40px);
      }
    }
  {% endif %}
  /* END */
{%- endstyle -%}
     

<ap-headerstore {% if section.settings.transparent_header %}transparent=""{% endif %} {% if section.settings.sticky_header %}sticky=""{% endif %} class="header header-3
" role="banner">    
    <div class="header_wrapper">
        <div class="{%- if section.settings.fullwidth -%}container-fluid{%- else -%}container{%- endif -%}">
            <div class="header_wrapper-row">

                <div class="header__icon-menu hd-desk">
                  <button is="toggle-button" class="header__icon-wrapper tap-area hd-desk"
                    ap-controlsaria="mobile-menu-drawer" ap-expanded-aria="false">
                    <span class="visually-hidden">Navigation</span>
                    <svg focusable="false" width="18" height="14" class="icon icon--header-hamburger   "
                      viewBox="0 0 18 14">
                      <path d="M0 1h18M0 13h18H0zm0-6h18H0z" fill="none" stroke="currentColor" stroke-width="1.2">
                      </path>
                    </svg>
                  </button>
                  <a href="/search" is="ap-togglelink" class="header__icon-wrapper tap-area hd-desk" aria-label="Search" ap-controlsaria="search-drawer" ap-expanded-aria="false">
                    {% render "icon-search-header" %}
                  </a>
                </div>

                {% render 'header-logo' %}    

                {% render 'search-header' %}

                <div class="header__secondary-links">

                    <div class="d-flex align-item-center">
                      {% if section.settings.enable_localization_currency %}
                        <div class="hd-phone">
                          {% render 'localization-currency', id: 'HeaderCountryForm' %}
                        </div>
                      {% endif %}
          
                      {% if section.settings.enable_localization %}
                        <div class="hd-phone">
                          {% render 'localization' %}
                        </div>
                      {% endif %}
                    </div>

                    <div class="header-icon header__icon-list">
                      <div class="header__icon-wrapper tap-area">
                        {% render 'header-user' %}
                      </div>
                    </div>     
                    
                    <a href="/pages/wishlist" class="header-icon header__icon-wrapper tap-area header-wishlist" >
                      {% render 'icon-wishlist-header' %}
                      <ap-wishlistcount class="header-ap_wishlistcount bubble-count" id="wishlistcount"></ap-wishlistcount>
                    </a>
                    
                    <a href="/cart" is="ap-togglelink" ap-controlsaria="mini-cart" ap-expanded-aria="false" class="header-icon header__icon-wrapper tap-area icon-cart" aria-label="Cart" data-no-instant="">
                      {% render 'icon-cart' %}
                      <ap-cartcount class="header__ap-cartcount header__ap-cartcount--floating bubble-count">
                        {{ cart.item_count }}
                      </ap-cartcount>
                    </a>

                </div>

            </div>
        </div>
    </div>
    <div style="background-color: {{ section.settings.bg_header_bottom }};" class="header-bottom">
        <div class="{%- if section.settings.fullwidth -%}container-fluid{%- else -%}container{%- endif -%}">
            <div class="row align-items-center">

                {% if section.settings.menu_categories != blank %}
                  <div class="menu-categories">
                      <button is="toggle-button" class="header__icon-wrapper tap-area"
                          ap-controlsaria="categories-menu-drawer" ap-expanded-aria="false">
                          <div class="categories-title">
                              <div class="nav-categories-title">{{ 'sections.header.categories.title' | t }}</div>
                              <div class="icon-title_categories-left">
                                {% render 'icon-bar' %}
                              </div>
                          </div>
                          <span class="visually-hidden">Navigation</span>
                      </button>
                      {% render 'categories-menu' %}
                  </div>
                {% endif %}

                <nav class="header__inline-navigation hd-pocket hd-lap">
                  {%- liquid
                  assign blocks = section.blocks
                  -%}
                  {% render 'header-menu', _class: "header__inline-wrapper" , blocks: blocks %}
                </nav>

                {% if section.settings.contact_content != blank %}
                  <div style="font-size: 14px;font-weight: 500;" style="color: {{ section.settings.color_contact }}" class="header-contact hd-pocket hd-lap">
                    {{ section.settings.contact_content }}
                  </div>
                {% endif %}    

            </div>
        </div>
    </div>
</ap-headerstore>

