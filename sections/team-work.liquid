{% render 'section-style' %}

<style>
  #shopify-section-{{ section.id }} {
    --heading-color: {{ section.settings.heading_color | color_extract: 'red' }}, {{ section.settings.heading_color | color_extract: 'green' }}, {{ section.settings.heading_color | color_extract: 'blue' }};
    --color-body: {{ section.settings.text_color }};
  }
  .person__social svg {
    width: 16px;
    height: 16px;
  }
  .col-person {
    position: relative;
    margin: 0 0 30px;
}
.person__info {
    position: absolute;
    bottom: 0;
    left: 0;
    display: flex;
    align-items: start;
    opacity: 0;
    transition: all .3s;
}
.col-person:hover .person__info {
  opacity: 1;
}
.person__info_text {
    padding: 30px;
    background-color: #fff;
}
.person__social .list-social__item {
    width: 40px;
    height: 40px;
    line-height: 1;
    margin: 0 0 2px;
}
.person__social .link--text {
    display: flex;
    width: 100%;
    height: 100%;
    background-color: var(--primary-2);
    color: #fff;
}
.person__social .link--text:hover {
  background-color: var(--primary);
} 
.person__social svg {
    width: 16px;
    height: 16px;
    margin: auto;
}
.person__social {
  margin: 0;
}
.person__job {
  font-size: calc(var(--base-font-size) - 2px);
  font-weight: 400;
  margin: 0 0 6px;
}
.person__name.h6 {
  margin: 0 0 20px;
  font-weight: 500;
  color: var(--primary-2);
}
.teamwork-join-title {
  font-size: 100px;
  line-height: 106px;
  font-weight: 500;
  margin: 0 0 10px;
}
.teamwork-join-description {
  margin: 0 0 30px;
}
.teamwork-join-button .button.btn-base {
  margin-left: auto;
}
.teamwork-join {
  position: relative;
}
.teamwork-join-content {
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  padding: 60px;
  text-align: right;
}
img.teamwork-img {
    width: 100%;
    object-fit: cover;
}
.teamwork-join-img img {
    width: 100%;
    object-fit: cover;
}
@media (max-width: 1199px) {
  .teamwork-join-title {
    font-size: 60px;
    line-height: 1;
  }
  .teamwork-join-content {
    padding: 30px;
  }
}
</style>
<section class="aboutus_section">
    <div class="container">
        {% if section.settings.tab_heading != blank %}
        <header class="section__header text-{{ section.settings.text_align }} mb-60">
          {% if section.settings.sub_heading != blank %}
            <p class="heading sub-heading mb-20">
                {{ section.settings.sub_heading }}
            </p>
          {% endif %}
          <h3 class="heading h{{ section.settings.tab_heading_size }}">{{ section.settings.tab_heading }}</h3>
          {% if section.settings.tab_description != blank %}
          <div class="heading-description">
              {{ section.settings.tab_description }}
          </div>
          {% endif %}
        </header>
        {% endif %}
      <div class="row">
        {%- for block in section.blocks -%}
          {%- case block.settings.width -%}
          {%- when '20%' -%}
          {%- assign block_width = 'col-xl-20 col-lg-4 col-md-4 col-12' -%}
          {%- when '25%' -%}
          {%- assign block_width = 'col-xl-3 col-md-6 col-12' -%}
          {%- when '33%' -%}
          {%- assign block_width = 'col-xl-4 col-lg-4 col-md-6 col-12' -%}
          {%- when '37%' -%}
          {%- assign block_width = 'col-xl-37 col-md-6 col-12' -%}
          {%- when '40%' -%}
          {%- assign block_width = 'col-xl-40 col-lg-4 col-md-4 col-12' -%}
          {%- when '50%' -%}
          {%- assign block_width = 'col-lg-6 col-md-12 col-12' -%}
          {%- when '60%' -%}
          {%- assign block_width = 'col-xl-60 col-md-6 col-12' -%}
          {%- when '63%' -%}
          {%- assign block_width = 'col-xl-63 col-md-6 col-12' -%}
          {%- when '66%' -%}
          {%- assign block_width = 'col-xl-8 col-md-6 col-12' -%}
          {%- when '75%' -%}
          {%- assign block_width = 'col-xl-9 col-md-6 col-12' -%}
          {%- when '80%' -%}
          {%- assign block_width = 'col-lg-80 col-md-8 col-sm-6 col-12' -%}
          {%- when '100%' -%}
          {%- assign block_width = 'col-12' -%}
