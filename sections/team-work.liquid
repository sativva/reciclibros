                      src="{{ block.settings.featured_image | image_url: width: 1500 }}"
                      height="{{ block.settings.featured_image.height }}"
                      width="{{ block.settings.featured_image.width }}">
                    {% else %}
                      {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    {% endif %}
                  </div>
                  <div class="teamwork-join-content">
                    <div style="color: {{ block.settings.color_text }};" class="teamwork-join-title">
                      {{ block.settings.title }}
                    </div>
                    <div style="color: {{ block.settings.color_text }};" class="teamwork-join-description h6">
                      {{ block.settings.description }}
                    </div>
                    {% if block.settings.button1_label != blank %}
                      <div class="teamwork-join-button">
                          <a href="{{ block.settings.link1 }}" class="button btn-base">
                              {{ block.settings.button1_label }}
                          </a>
                      </div>
                    {% endif %}
                  </div>
                </div>

            {% endcase %}
          </div>
        {%- endfor -%}
      </div>
    </div>
  </section>

