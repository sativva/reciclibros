<style>
.section-{{ section.id }} {
  --bs-border-width: 2px;
}
.featured-productlist__item {
  display: flex;
  flex-wrap: wrap;
  padding: 30px;
  border-radius: 20px;
  gap: 16px;
  flex-direction: column;
}
.featured-productlist__item a {
  font-size: var(--h6-font-size);
  font-weight: var(--heading-font-weight);
}
.featured-body {
  flex: 1;
}
.featured-productlist__item img {
  border-radius: 20px;
}
.section-{{ section.id }} .description-product {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

@media (min-width: 992px) {
  .featured-productlist__item {
    flex-direction: row;
  }
  .featured-productlist__item a {
    max-width: 250px;
  }
}

/* COUNTDOWN */
.featured-product__countdown .timer-block__unit ,
.featured-product__countdown .timer-block:after {
  display: none;
}
.featured-product__countdown .timer {
  background-color: transparent;
  padding: 0;
  margin: 10px 0 0;
}
.featured-product__countdown .timer-block__num {
  font-size: 20px;
  line-height: 26px;
  font-weight: 700;
  background-color: var(--primary-2);
  padding: 7px 8px;
  border-radius: 8px;
  color: #fff;
}
.featured-product__countdown .timer-block {
  padding: 0;
  min-width: 40px;
  width: auto;
}
.featured-product__countdown .timer-display {
  margin: 0;
  gap: 10px;
  justify-content: start;
}
.featured-product__countdown-title {
  font-size: 14px;
  line-height: 20px;
  font-weight: 500;
  color: rgb(var(--heading-color));
}
/* END */
</style>

{% render 'section-style' %}

<section class="section-{{ section.id }} featured-product-section">
  <div class="{{ section.settings.setwidthout }}">

    <div {% if section.settings.arrow_heading %}style="gap: 15px 0;"{% endif %} class="{% if section.settings.arrow_heading %}d-flex flex-wrap flex-md-row flex-column align-items-center mb-5 {% else %} section__header-wp{% endif %}">
            
      {% render 'section-heading' %}

      {% if section.settings.arrow_heading %}
      <div style="gap: 10px;" class="d-flex position-relative justify-content-md-end justify-content-center arrow-heading">
        <button class="swiper-button-prev" data-swiper-id="{{ section.id }}-prev">
          {% render 'icon-arrow-prev' %}
        </button>
        <button class="swiper-button-next" data-swiper-id="{{ section.id }}-next">
          {% render 'icon-arrow-next' %}
        </button>
      </div>
      {% endif %}
    
    </div>

    <div class="row">
      <div class="featured-productlist">
        <div data-swiper-id="{{ section.id }}" class="ap-swiper mySwiper swiper-container" data-swiper='{
            "spaceBetween": 15,
            "slidesPerView": 1,
            "breakpoints":{
              "576": {
                "slidesPerView": 2,
                "spaceBetween": 15
              },
              "768":{
                "slidesPerView": 2,
                "spaceBetween": {{ section.settings.spaceBetween }}
              },
              "1200":{
                "slidesPerView": 2,
                "spaceBetween": {{ section.settings.spaceBetween }}
              },
              "1500":{
                "slidesPerView": {{ section.settings.perviewDesktop }},
                "spaceBetween": {{ section.settings.spaceBetween }}
              }
            }
          }'>

          <div class="swiper-wrapper">
            {%- assign collection = collections[section.settings.mini_collection] -%}
            {%- if collection != blank -%}
              {%- for product in collection.products limit: section.settings.limit_product -%}
                <div class="swiper-slide">
                  <div class="featured-productlist__item border" style="border-color: {{ section.settings.p_border }}!important;">
      
                    <a class="d-block" href="{{ product.url | within: collection }}"><img class="" 
                      src="{{ product.featured_image | image_url: width: product.featured_media.width }}" 
                      loading="lazy"
                      width="{{ product.featured_image.width }}"
                      height="{{ product.featured_image.height }}">
                    </a>
      
                    <div class="featured-body">
                      
                      {% if settings.enable_rating %}          
                        <!-- Start of Judge.me code -->
                        <div class='jdgm-widget jdgm-preview-badge mb-2'>
                            {{ product.metafields.judgeme.badge }}             
                        </div>   
                        <!-- End of Judge.me code -->
                      {% endif %}
      
                      <a href="{{ product.url | within: collection }}" title="{{ product.title }}" class="product-item-meta__title mb-14">{{ product.title }}
                      </a>
      
                      <div class="featured-product__price mb-14">
                        {%- if product.available -%}
                          {% render 'price-product-grid', product: product %}
                        {%- else -%}
                          <div class="product-card__availability">
                            {{ 'products.product.sold_out' | t }}
                          </div>
                        {%- endif -%}
                      </div>
      
                      <div class="description-product mb-3">{{ product.description | strip_html | truncatewords: 25 }}</div>
      
                      <div class="featured-product__countdown">
                        {% if product.metafields.my_fields.countdown_timer != blank %}
                          <div class="featured-product__countdown-title">
                            {{ 'products.product.hurry_up' | t }}
                          </div>
                          {% render 'product-countdown', product: product  %}
                        {%endif %}
                      </div>
      
                    </div>
      
                  </div>
                </div>
              {%- endfor -%}
            {%- else -%}
              {%- assign limit =  section.settings.limit_product -%}
              {%- for i in (1..limit) -%}
                <div class="swiper-slide">
                  <div class="media p-3 {% unless forloop.last %}border-bottom{% endunless %}">
                    <div class="mr-3 border">
                      {%- capture current -%}
                        {%- cycle 1, 2, 3, 4, 5, 6 -%}
                      {%- endcapture -%}
                      <div style="width: 74px;">
                        {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
                      </div>
                    </div>
                    <div class="media-body">
                      <div class="product-card__name">{{ 'onboarding.product_title' | t }}
                      </div>
                      <div class="product-card__price">
                        {%- cycle '$19.99', '$28.37', '$33.22', '$41.56', '$55.21', '$62.98' -%}
                      </div>
                    </div>
                  </div>
                </div>
              {%- endfor -%}
            {%- endif -%}
          </div>

          <!-- Pagination and Navigation -->
          {% if section.settings.dots %}
            <div class="swiper-pagination"></div>
          {% endif %}

          {% if section.settings.arrow_heading != true %}
            {% if section.settings.arrows %}
              <button class="swiper-button-prev" data-swiper-id="{{ section.id }}-prev">
                {% render 'icon-arrow-prev' %}
              </button>
              <button class="swiper-button-next" data-swiper-id="{{ section.id }}-next">
                {% render 'icon-arrow-next' %}
              </button>
            {% endif %}
          {% endif %}

        </div>
    </div>
  </div>
</section>


