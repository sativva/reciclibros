{{ 'banner-grid.css' | asset_url | stylesheet_tag }}
{% render 'section-style' %}

<style>
  #shopify-section-{{ section.id }} {
    --heading-color: {{ section.settings.heading_color | color_extract: 'red' }}, {{ section.settings.heading_color | color_extract: 'green' }}, {{ section.settings.heading_color | color_extract: 'blue' }};
  }
  #shopify-section-{{ section.id }} .banner-image:before {
    content: '';
    background-color: rgba(0,0,0,.3);
    display: inline-block;
    position: absolute;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: all .4s;
    z-index: 0;
  }
  #shopify-section-{{ section.id }} .banner-image {
    position: relative;
    overflow: hidden;
    border-radius: 20px;
  }
  #shopify-section-{{ section.id }} .banner-content:hover .banner-image:before {
    opacity: 1;
  }
  #shopify-section-{{ section.id }} .banner-content:hover img.banner-list-image {
    transform: scale(1.1);
  }
  #shopify-section-{{ section.id }} .banner-grid .row {
    gap: calc({{ section.settings.distance_col }}px + {{ section.settings.distance_col }}px) 0;
    margin: 0 calc(-1 * {{ section.settings.distance_col }}px);
  }
  #shopify-section-{{ section.id }} .row > div {
    padding: 0 {{ section.settings.distance_col }}px;
  }
  {% if section.settings.distance_col == "20" %}
  #shopify-section-{{ section.id }} .row > div:not(:last-child) {
    border-right: 1px solid rgb(var(--border-color));
  }
  {% endif %}

  .section-{{ section.id }} .banner-text {
    padding: 30px;
  }

  {% if section.settings.position_btn_bottom %}
  .section-{{ section.id }} .wrapper-button {
    position: absolute;
    bottom: 30px;
    right: 30px;
  }
  {% endif %}

  @media (min-width: 768px) {
    {% for block in section.blocks %}
    .section-{{ section.id }} #block-{{ block.id }} .banner-text {
      padding: {{ block.settings.padding_inner }};
    }
    {% endfor %}
  }
  @media (max-width: 1501px) {
    .banner-grid img.banner-list-image {
      min-height: 350px;
    }
  }
  @media (max-width: 1199px) {
    .section-{{ section.id }} img.banner-list-image {
      min-height: 350px;
    }
  }
</style>

<section class="section-{{ section.id }} banner-grid">
    <div class="{{ section.settings.setwidthout }}">
      {% render 'section-heading' %}

        <div class="row">
            {% for block in section.blocks %}
                {%- case block.settings.width -%}
                {%- when '25%' -%}
                {%- assign block_width = 'col-lg-3 col-md-6 col-sm-6 col-12' -%}
                {%- when '33%' -%}
                {%- assign block_width = 'col-xl-4 col-md-4 col-12' -%}
                {%- when '30%' -%}
                {%- assign block_width = 'col-lg-30 col-md-6 col-12' -%}
                {%- when '40%' -%}
                {%- assign block_width = 'col-xl-40 col-md-6 col-12' -%}
                {%- when '45%' -%}
                {%- assign block_width = 'col-lg-45 col-md-6 col-12' -%}
                {%- when '50%' -%}
                {%- assign block_width = 'col-xl-6 col-md-6 col-12 banner-col' -%}
                {%- when '55%' -%}
                {%- assign block_width = 'col-xl-55 col-md-6 col-12' -%}
                {%- when '60%' -%}
                {%- assign block_width = 'col-xl-60 col-md-6 col-12' -%}
                {%- when '66%' -%}
                {%- assign block_width = 'col-xl-8 col-md-8 col-12' -%}
                {%- when '75%' -%}
                {%- assign block_width = 'col-xl-9 col-md-6 col-12' -%}
                {%- when '100%' -%}
                {%- assign block_width = 'col-12 col-full' -%}
                {%- endcase -%}
                <div id="block-{{ block.id }}" class="{{ block_width }} banner-col-{{ forloop.index }}">
                    <banner-content reveal-on-scroll="">
                        <div class="banner-content has-overlay">
                            <div class="banner-image">
                                {% if block.settings.featured_image != blank %}
                                    <img class="banner-list-image" reveal="" loading="lazy" 
                                    sizes="(max-width: 740px) 80vw, (max-width: 999px) 60vw, 425px"
                                    alt="" 
                                    src="{{ block.settings.featured_image | image_url: width: block.settings.featured_image.width }}" 
                                    data-srcset="{%- if block.settings.featured_image.width >= 3000 -%}{{ block.settings.featured_image | image_url: width: 3000, crop: 'center' }} 3000w,{%- endif -%} {{ block.settings.featured_image | image_url }} {{ block.settings.featured_image.width }}w"
                                    src="{{ block.settings.featured_image | image_url: width: 1500 }}"
                                    height="{{ block.settings.featured_image.height }}"
                                    width="{{ block.settings.featured_image.width }}">
                                {% else %}
                                    <div class="banner-list-image">
                                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                    </div>
                                {% endif %}
                            </div>

                            {%-liquid
                              assign position_text = block.settings.position_text
          
                              case position_text
                                when 'top-left'
                                assign positiontxt = 'align-items-start justify-content-start'
                                when 'top-center'
                                assign positiontxt = 'align-items-center justify-content-start'
                                when 'top-right'
                                assign positiontxt = 'align-items-end justify-content-start'
                                when 'mid-left'
                                assign positiontxt = 'align-items-start justify-content-center'
                                when 'mid-center'
                                assign positiontxt = 'align-items-center justify-content-center'
                                when 'mid-right'
                                assign positiontxt = 'align-items-end justify-content-center'
                                when 'bot-left'
                                assign positiontxt = 'align-items-start justify-content-end'
                                when 'bot-center'
                                assign positiontxt = 'align-items-center justify-content-end'
                                when 'bot-right'
                                assign positiontxt = 'align-items-end justify-content-end'
                                else 
                                assign positiontxt = 'align-items-end justify-content-start'
                              endcase
                            -%}
                            <div 
                            style="background-color: {{ block.settings.background_color }};
                            {% if block.settings.background_image != blank %}
                            background-image: url({{ block.settings.background_image | image_url: width: 2000 }});
                            {% endif %}
                            " 
                            class="banner-text d-flex flex-column {{ positiontxt }}">

                              <div class="text-{{ block.settings.text_align }}">
    
                                {% if block.settings.heading_title != blank %}
                                <h3 style="color: {{ block.settings.color_title }};transition: all .4s;" class="heading sub-heading-2 mb-1" reveal="">
                                  {{- block.settings.heading_title -}}
                                </h3>
                                {% endif %}
                                
                                {% if block.settings.heading != blank %}
                                <h2 style="color: {{ section.settings.color_title_center }};transition: all .4s;" class="heading heading-center fw-semibold text-uppercase my-0 {{ section.settings.heading_size_2 }} {% if block.settings.description != blank %} mb-2{% else %} mb-4{% endif %}" reveal="">
                                    <span>
                                        {{- block.settings.heading -}}
                                    </span>
                                </h2>
                                {% endif %}   
      
                                {% if block.settings.description != blank or block.settings.description_2 != blank %}
                                <p style="color: {{ section.settings.color_description }};transition: all .4s;" class="description mb-0" reveal="">
                                    <span>
                                      {{- block.settings.description -}}
                                    </span>   
                                    <span>   
                                      {{- block.settings.description_2 -}}
                                    </span>
                                </p>
                                {% endif %}
                                
                                <div class="wrapper-button">
                                  <style>
                                    #block-{{ block.id }} a.button.btn-base, 
                                    #block-{{ block.id }} .btn-outline, 
                                    #block-{{ block.id }} .btn-line ,
                                    #block-{{ block.id }} .btn-line-black ,
                                    #block-{{ block.id }} .btn-base {
                                      color: {{ section.settings.color_btn }};
                                      background-color: {{ section.settings.bg_btn }};
                                      text-decoration: none;
                                      border-color: {{ section.settings.color_btn }};
                                    }
                                    #block-{{ block.id }} a.button.btn-base:hover,
                                    #block-{{ block.id }} .btn-outline:hover, 
                                    #block-{{ block.id }} .btn-line:hover ,
                                    #block-{{ block.id }} .btn-line-black:hover ,
                                    #block-{{ block.id }} .btn-base:hover {
                                      color: {{ section.settings.color_btn_hover }};
                                      background-color: {{ section.settings.bg_btn_hover }};
                                      border-color: {{ section.settings.color_btn_hover }};
                                    }
                                  </style>
                                  {% if block.settings.button1_label != blank %}
                                  <a href="{{ block.settings.link1 }}" reveal="" class="button {{ section.settings.style_btn_item }}">
                                      {{ block.settings.button1_label }}
                                  </a>
                                  {% endif %}
                                  {% if block.settings.button2_label != blank %}
                                  <a href="{{ block.settings.link2 }}" reveal="" class="button {{ section.settings.style_btn_2 }}">
                                      {{ block.settings.button2_label }}
                                  </a>
                                  {% endif %}
                                </div>

                              </div>

                            </div>
                        </div>
                    </banner-content>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

