<style>
.team-img {
  max-width: 240px;
}
.team-img img {
  height: 100%;
  object-fit: cover;
}
.team-{{ section.id }} .section__header ,
.team-{{ section.id }} .team-carousel {
  width: 100%;
  padding-left: var(--container-distance);
  padding-right: var(--container-distance);
}
@media (min-width: 768px) {
  .team-{{ section.id }} .section__header ,
  .team-{{ section.id }} .team-carousel {
    width: 50%;
  }
}
@media (min-width: 1300px) {
  .team-{{ section.id }} .section__header {
    padding-right: 150px;
  }
  .team-{{ section.id }} .team-carousel {
    padding-left: 30px;
  }
}
{% if section.settings.sw_direction == "vertical" %}
.team-{{ section.id }} .swiper-autoheight {
  height: 660px;
}
{% endif %}
.team-wp {
  display: flex;
  flex-direction: row-reverse;
  background-color: {{ section.settings.bg_item }};
  border-radius: 8px;
  box-shadow: 0 4px 20px 0 rgba(0, 0, 0, .1);
}
.team-detail {
    flex: 1;
    padding: 40px;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.team-job {
    font-size: calc(var(--base-font-size) - 2px);
    margin: 0 0 6px;
}
.team-name.h6 {
    font-weight: 500;
    margin: 0 0 20px;
}
.team-social svg {
    width: 16px;
    height: 16px;
}
.team-social .social-media {
  gap: 16px;
}
.team-description {
    margin: 0 0 16px;
}
.team-description p {
    margin: 0; 
}
.social-media__item:hover:before {
  display: none;
}
@media (max-width: 1199px) {
  .team-detail {
    padding: 15px;
  }
}
</style>

{% render 'section-style' %}

