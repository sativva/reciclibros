    <div class="{{ section.settings.setwidthout }}">
        <div class="row {% if section.settings.no_gutter %}no-gutters{% endif %} align-items-{{ section.settings.align_items }}">
            {% if section.settings.tab_heading != blank %}
                <header class="section__header text-{{ section.settings.text_align }} mb-60">
                    {% if section.settings.sub_heading != blank %}
                      <p class="heading sub-heading mb-20">{{ section.settings.sub_heading }}</p>
                    {% endif %}
                    <h3 class="heading h{{ section.settings.tab_heading_size }} mb-20">{{ section.settings.tab_heading }}</h3>
                    {% if section.settings.tab_description != blank %}
                      <div class="heading-description">
                        {{ section.settings.tab_description }}
                      </div>
                    {% endif %}
                    {% if section.settings.tab_description_2 != blank %}
                      <div class="heading-description-2">
                        {{ section.settings.tab_description_2 }}
                      </div>
                    {% endif %}
                    {% if section.settings.btn_text != blank %}
                    <div class="btn-more">
                      <a href="{{ section.settings.btn_link }}" class="button {{ section.settings.style_btn }}">
                        {{ section.settings.btn_text }}
                        {% render 'icon-arrow-2' %}
                      </a>
                      </div>
                    {% endif %}
                </header>
            {% endif %}
            <div class="team-carousel">
                <div data-swiper-id="{{ section.id }}" class="ap-swiper mySwiper swiper-container" data-swiper='{
                    "spaceBetween": 15,
                    "slidesPerView": 1,
                    "loop": "true",
                    "direction": "{{ section.settings.sw_direction }}",
                    "breakpoints":{
                      "360": {
                        "slidesPerView": 2,
                        "spaceBetween": 15
                      },
                      "768":{
                        "slidesPerView": 3,
                        "spaceBetween": {{ section.settings.spaceBetween }}
                      },
                      "1200":{
                        "slidesPerView": {{ section.settings.perviewDesktop }},
                        "spaceBetween": {{ section.settings.spaceBetween }}
                      }
                    }
                  }'>
                    <div class="swiper-wrapper">
                        {% for block in section.blocks %}
                            <div class="swiper-slide">
                                <div class="team-wp">
                                    <div class="team-img">
                                        {% if block.settings.team_img != blank %}
                                            <img class="banner-list-image" loading="lazy" 
                                            sizes="(max-width: 740px) 80vw, (max-width: 999px) 60vw, 425px"
                                            alt="" 
                                            src="{{ block.settings.team_img | image_url: width: block.settings.team_img.width }}" 
                                            data-srcset="{%- if block.settings.team_img.width >= 3000 -%}{{ block.settings.team_img | image_url: width: 3000, crop: 'center' }} 3000w,{%- endif -%}
                                                {{ block.settings.team_img | image_url }} {{ block.settings.team_img.width }}w"
                                            src="{{ block.settings.team_img | image_url: width: 1500 }}"
                                            height="{{ block.settings.team_img.height }}"
                                            width="{{ block.settings.team_img.width }}">
                                        {% else %}
                                            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                                        {% endif %}
                                    </div>
                                    <div class="team-detail">
                                        <div style="color: {{ section.settings.color_1 }}" class="team-job">{{ block.settings.team_job }}</div>
                                        <div style="color: {{ section.settings.color_2 }}" class="team-name h6">{{ block.settings.team_name }}</div>
                                        {% if block.settings.team_des != blank %}
                                        <div style="color: {{ section.settings.color_3 }}" class="team-description">{{ block.settings.team_des }}</div>
                                        {% endif %}
                                        <div class="team-social">
                                            {% liquid
                                            assign _show_social = false
                                            if block.settings.social_facebook != blank
                                              assign _show_social = true
                                            endif
                                            if section.settings.social_tw != blank
                                              assign _show_social = true
                                            endif
                                            if block.settings.social_instagram != blank
                                              assign _show_social = true
                                            endif
                                            if block.settings.social_pinterest != blank
                                              assign _show_social = true
                                            endif
                                            if block.settings.social_youtube != blank
                                              assign _show_social = true
                                            endif
                                            if block.settings.social_linkedin != blank
                                              assign _show_social = true
                                            endif
