      "id": "color_2",
      "label": "Color name"
    },
    {
      "type": "color",
      "id": "color_3",
      "label": "Color description"
    }
  ],
  "blocks": [
    {
      "type": "team",
      "name": "Team item",
      "settings": [
        {
            "type": "image_picker",
            "id": "team_img",
            "label": "Image"
        },
        {
            "type": "text",
            "id": "team_job",
            "label": "Job"
        },
        {
            "type": "text",
            "id": "team_name",
            "label": "Name"
        },
        {
            "type": "richtext",
            "id": "team_des",
            "label": "Description"
        },
        {
            "type": "header",
            "content": "Settings Social"
        },
        {
            "type": "url",
            "id": "social_facebook",
            "label": "Facebook"
        },
        {
            "type": "url",
            "id": "social_tw",
            "label": "X"
        },
        {
            "type": "url",
            "id": "social_instagram",
            "label": "Instagram"
        },
        {
            "type": "url",
            "id": "social_pinterest",
            "label": "Pinterest"
