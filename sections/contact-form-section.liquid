{{ 'section-contact-form.css' | asset_url | stylesheet_tag }}
{% render 'section-style' %}

<section class="contact-form-section">
  <div id="formulario"></div>
  <div class="{{ section.settings.setwidthout }}">
    <div class="contact-row">
      <div class="contact-content">
        {% if section.settings.heading != blank %}
          <h2 style="color: {{ section.settings.color_text }}" class="title {{ section.settings.heading_size }} mb-30">
            {{ section.settings.heading | escape }}
          </h2>
        {% else %}
          <h2 class="visually-hidden">{{ 'templates.contact.form.title' | t }}</h2>
        {% endif %}

        {% if section.settings.description != blank %}
          <p style="color: {{ section.settings.color_text }}" class="description mb-40">
            {{ section.settings.description }}
          </p>
        {% endif %}

        {% if section.settings.info_text != blank %}
          <div style="color: {{ section.settings.color_text }}" class="contact-content-info">
            {% if section.settings.info_text != blank %}
            <div class="cc-info-item">
              <div class="cc-info-icon">{{ section.settings.icon }}</div>
              <div class="cc-info-text">{{ section.settings.info_text }}</div>
            </div>
            {% endif %}
            {% if section.settings.info_text_2 != blank %}
            <div class="cc-info-item">
              <div class="cc-info-icon">{{ section.settings.icon_2 }}</div>
              <div class="cc-info-text">{{ section.settings.info_text_2 }}</div>
            </div>
            {% endif %}
            {% if section.settings.info_text_3 != blank %}
            <div class="cc-info-item">
              <div class="cc-info-icon">{{ section.settings.icon_3 }}</div>
              <div class="cc-info-text">{{ section.settings.info_text_3 }}</div>
            </div>
            {% endif %}
          </div>
        {% endif %}
      </div>

      <div class="contact-form">
        {% if section.settings.contact_form_title != blank %}
          <h2 class="contact-form-title">{{ section.settings.contact_form_title }}</h2>
        {% endif %}
        {% if section.settings.contact_form_des != blank %}
          <p class="contact-form-description">{{ section.settings.contact_form_des }}</p>
        {% endif %}

        {%- form 'contact', id: 'ContactForm', class: 'isolate' -%}

          {%- if form.posted_successfully? -%}
            <h2 class="form-status form-status-list form__message" tabindex="-1" autofocus>
              {% render 'icon-success' %} {{ 'templates.contact.form.post_success' | t }}
            </h2>
          {%- elsif form.errors -%}
            <div class="form__message">
              <h2 class="form-status caption-large text-body" role="alert" tabindex="-1" autofocus>
                {% render 'icon-error' %} {{ 'templates.contact.form.error_heading' | t }}
              </h2>
            </div>
          {%- endif -%}

          <div class="contact__fields">

  <div class="field">
    <label class="field__label-top" for="ContactForm-name">Nombre *</label>
    <input class="field__input" type="text" id="ContactForm-name" name="contact[name]" required>
  </div>

  <div class="field">
    <label class="field__label-top" for="ContactForm-apellido">Apellidos *</label>
    <input class="field__input" type="text" id="ContactForm-apellido" name="contact[apellido]" required>
  </div>

  <div class="field">
    <label class="field__label-top" for="ContactForm-email">Correo electrónico *</label>
    <input class="field__input" type="email" id="ContactForm-email" name="contact[email]" required>
  </div>

  <div class="field">
    <label class="field__label-top" for="ContactForm-phone">Teléfono *</label>
    <input class="field__input" type="tel" id="ContactForm-phone" name="contact[phone]" required>
  </div>

  <div class="field full-width">
    <label class="field__label-top" for="ContactForm-direccion">Dirección *</label>
    <input class="field__input" type="text" id="ContactForm-direccion" name="contact[direccion]" required>
  </div>

  <div class="field">
    <label class="field__label-top" for="ContactForm-cp">Código postal *</label>
    <input class="field__input" type="number" id="ContactForm-cp" name="contact[codigo_postal]" min="10000" max="99999" required>
  </div>

  <div class="field">
    <label class="field__label-top" for="ContactForm-ciudad">Ciudad *</label>
    <input class="field__input" type="text" id="ContactForm-ciudad" name="contact[ciudad]" required>
  </div>

  <div class="field full-width">
    <label class="field__label-top" for="ContactForm-libros">
      Número de libros *
      <span class="field__hint">(mínimo 50 libros)</span>
    </label>
    <input class="field__input" type="number" id="ContactForm-libros" name="contact[numero_libros]" min="50" required>
  </div>

</div>
          <div class="contact__button">
            <button type="submit" class="button btn-outline">
              {{ 'templates.contact.form.send_message' | t }}
            </button>
          </div>
        {%- endform -%}

      </div>
    </div>
  </div>
</section>

