{%- style -%}
  
  :root {
    --enable-sticky-header: {% if section.settings.sticky_header %}1{% else %}0{% endif %};
    --enable-transparent-header: {% if section.settings.transparent_header %}1{% else %}0{% endif %};
  }

  #shopify-section-{{ section.id }} {
    --header-background: {{ section.settings.header_background }};
    --header-text-color: {{ section.settings.header_text_color | color_extract: 'red' }}, {{ section.settings.header_text_color | color_extract: 'green' }}, {{ section.settings.header_text_color | color_extract: 'blue' }};
    --header-border-color: {{ section.settings.header_border_color }};
    --reduce-header-padding: {{ section.settings.reduce_header_padding }};
    position: -webkit-sticky;
    {% if section.settings.sticky_header %}position: sticky;{% endif %}
    top: 0;
    z-index: 999;

    /* Main Menu */
    --m-color-menu: {{ section.settings.color_menu }};
    --m-color-menu-hover: {{ section.settings.color_menu_hover }};  

    /* Search */
    --bg-btn-search: {{ section.settings.bg_btn_search }};
    --color-btn-search: {{ section.settings.color_btn_search }};

    /* Mega menu */
    --title-mega: {{ section.settings.color_menu_child_title }};
    --link-mega: {{ section.settings.color_menu_child }};
    --link-mega-h: {{ section.settings.color_menu_child_hover }};

    --color-icon: {{ section.settings.color_icon }};
    --color-icon-hover: {{ section.settings.color_icon_hover }};
  }

  #shopify-section-{{ section.id }} .header__logo-image {
    max-width: {{ section.settings.logo_width }}px;
  }

  {% if section.settings.enable_white %}
  .header_wrapper {
    padding: 0 60px;
    border-radius: 50px;
    background-color: #fff;
  }
  @media (max-width: 1199px) {
    .header_wrapper {
      padding: 20px;
    }
  }
  @media (max-width: 380px) {
    .header_wrapper {
      padding: 20px 0;
    }
  }
  {% endif %}

  .icon-header i.fa {
    font-size: 20px;  
    color: {{ section.settings.color_menu }};
  }

  @media screen and (min-width: 741px) {
    #shopify-section-{{ section.id }} .header__logo-image {
      max-width: {{ section.settings.logo_width }}px;
    }
  }

  /* HEADER transparent */
  .header[transparent=""]:hover {
    background-color: var(--header-background);
    top: 30px !important;
  }
  .js body:not(.index) #shopify-section-{{ section.id }} .header-transparent {
    background-color: var(--header-background);
  }
  body:not(.index) .header[transparent=""] {
    position: unset;
    background: var(--header-background);
  }
  /* END  */

{%- endstyle -%}

{%- liquid
  assign main_linklist = section.settings.menu
  assign blocks = section.blocks
  assign link_count = 0
  for link in linklists[main_linklist].links
    assign link_count = link_count | plus: 1
  endfor
  assign link_half = link_count | divided_by: 2
-%}

<ap-headerstore {% if section.settings.transparent_header %}transparent=""{% endif %} {% if section.settings.sticky_header %}sticky=""{% endif %} class="header header-2
" role="banner">   
  <div class="{%- if section.settings.fullwidth -%}container-fluid{%- else -%}container{%- endif -%}">
    <div class="header_wrapper">

      {% render 'header-menu', _class: "header__inline-wrapper d-xl-none d-block" %}

      <div class="menu-split-left d-xl-flex d-none">

        {% if section.settings.contact_custom != blank %}
          <div class="header-contact_button hd-phone">
            {{ section.settings.contact_custom }}
          </div>
        {% endif %}

        {%- liquid
          assign blocks = section.blocks
        -%}
        {%- render 'header-menu-split' , limit: link_half, main_linklist: main_linklist, blocks: blocks -%}
        
      </div>

      {% render 'header-logo' %}   

      <div class="menu-split-right d-xl-flex d-none">

        {%- liquid
          assign blocks = section.blocks
        -%}
        {%- render 'header-menu-split' , offset: link_half, main_linklist: main_linklist, blocks: blocks -%}

        <div class="header__secondary-links">

            <div class="header__icon-list">

              <div class="d-flex align-item-center">
                {% if section.settings.enable_localization_currency %}
                  <div class="hd-phone">
                    {% render 'localization-currency', id: 'HeaderCountryForm' %}
                  </div>
                {% endif %}
    
                {% if section.settings.enable_localization %}
                  <div class="hd-phone">
                    {% render 'localization' %}
                  </div>
                {% endif %}
              </div>

              {% if section.settings.show_user %}
                <div class="header-icon header__icon-list">
                  <div class="header__icon-wrapper tap-area wrapper-user">
                    {% render 'header-user' %}
                  </div>
                </div>
              {% endif %}

              {% render 'search-header' %}

              <div class="header-wishlist">
                <a class="header-icon" href="/pages/wishlist">
                    {% render 'icon-wishlist-header' %}
                    <div class="icon-count d-none">   
                        <div class="title-icon">Wishlist</div>
                        <ap-wishlistcount id="wishlistcount"></ap-wishlistcount> <span>items</span>
                    </div>
                </a>
              </div>

              <a href="/cart" is="ap-togglelink" ap-controlsaria="mini-cart" ap-expanded-aria="false" class="header-icon header__icon-wrapper tap-area icon-cart" aria-label="Cart" data-no-instant="">
                {% render 'icon-cart' %}
                <ap-cartcount class="header__ap-cartcount header__ap-cartcount--floating bubble-count">
                  {{ cart.item_count }}
                </ap-cartcount>
              </a>

            </div>

        </div>

      </div>

      <div class="header__secondary-links d-xl-none d-block">

          <div class="header__icon-list">

            <div class="d-flex align-item-center">
              {% if section.settings.enable_localization_currency %}
                <div class="hd-phone">
                  {% render 'localization-currency', id: 'HeaderCountryForm' %}
                </div>
              {% endif %}

              {% if section.settings.enable_localization %}
                <div class="hd-phone">
                  {% render 'localization' %}
                </div>
              {% endif %}
            </div>

            {% if section.settings.show_user %}
              <div class="header-icon header__icon-list">
                <div class="header__icon-wrapper tap-area wrapper-user">
                  {% render 'header-user' %}
                </div>
              </div>
            {% endif %}

            <a href="/search" is="ap-togglelink" class="header-icon header__icon-wrapper tap-area icon-search hd-pocket hd-lap " aria-label="Search" ap-controlsaria="search-drawer" ap-expanded-aria="false">
              {% render "icon-search-header" %}
            </a>

